    String userName = inputScanner.nextLine();
    System.out.println("My name is: " + userName);

    System.out.println("Insert your age: ");
    String userAge = inputScanner.nextLine();
    System.out.println("My age is: "+ userAge);

    System.out.println("Insert your favoriter color: ");
    String userColor = inputScanner.nextLine();
    System.out.println("Your favorite color is: " + userColor);

    System.out.println("Insert one number: ");
    int firstNumber = inputScanner.nextInt();

    System.out.println("Insert the second number: ");
    int secondNumber = inputScanner.nextInt();

    System.out.println("Insert third number: ");
    int thirdNumber = inputScanner.nextInt();
